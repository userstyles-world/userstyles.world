<section id="code">
	<h2 class="td:d">Source code</h2>
	{{ $code := "" }}
	{{ if .Style.TruncateCode }}
		<mark class="mb:s">Source code has over 10K characters, so we truncated it. You can inspect the full source code on install link.</mark>
		{{ $code = printf "%.10000s..." .Style.Code }}
	{{ else }}
		{{ $code = printf "%s" .Style.Code }}
	{{ end }}
	<div class="Style-source">
		<pre><code>{{ $code }}</code></pre>
	</div>
</section>

<section id="reviews">
	<h2 class="td:d">Reviews</h2>
	{{ if and (.User.ID) (ne .Style.UserID .User.ID) }}
		<a href="/styles/review/{{ $.Style.ID }}">Add your review</a>
	{{ end }}
	{{ range .Reviews }}
		<div class="Box mt:m" id="id-{{ .ID }}">
			<div class="Box-header">
				<a class="username" href="/user/{{ .User.Username }}"><b>{{ .User.Username }}</b></a>
				{{ if gt .User.Role 0 }}{{ template "icons/verified" }}{{ end }}
				reviewed {{ with .Rating }} and rated {{ . }}/5 ‚≠ê {{ end }}
				<a class="datetime" href="#id-{{ .ID }}">
					<time datetime="{{ .CreatedAt | iso }}">
						{{ .CreatedAt | rel }}
					</time>
				</a>
			</div>

			{{ with.Comment }}
				<div class="Box-body mt:m">{{ . }}</div>
			{{ end }}
		</div>
	{{ else }}
		<i>No reviews yet.</i>
	{{ end }}
</section>
